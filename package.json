{
  "name": "shiki-image",
  "version": "0.1.2",
  "description": "Convert code snippets into images. Powered by shiki and takumi. Super fast.",
  "repository": "pi0/shiki-image",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs",
    "./core": "./dist/core.mjs"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "obuild",
    "dev": "vitest dev",
    "lint": "eslint . && prettier -c .",
    "lint:fix": "automd && eslint . --fix && prettier -w .",
    "bench": "node --expose-gc benchs/index.ts",
    "prepack": "pnpm build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && pnpm test:types && vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@takumi-rs/core": "^0.28.5",
    "@takumi-rs/helpers": "^0.28.5",
    "shiki": "^3.12.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "automd": "^0.4.0",
    "changelogen": "^0.6.2",
    "eslint": "^9.34.0",
    "eslint-config-unjs": "^0.5.0",
    "mitata": "^1.0.34",
    "obuild": "^0.2.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.15.1"
}
